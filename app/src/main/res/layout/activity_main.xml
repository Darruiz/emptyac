<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tview"
        android:layout_width="189dp"
        android:layout_height="0dp"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="177dp"
        android:hint="OlÃ¡, insira seu nome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnname" />

    <Button
        android:id="@+id/btnname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="121dp"
        android:text="Nomear"
        app:layout_constraintBottom_toTopOf="@+id/tview"
        app:layout_constraintEnd_toEndOf="@+id/tview"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/nameput"
        app:layout_constraintTop_toBottomOf="@+id/nameput" />

    <EditText
        android:id="@+id/nameput"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="127dp"
        android:layout_marginBottom="71dp"
        android:ems="10"
        android:hint="Insira seu nome"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>